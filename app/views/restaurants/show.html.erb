

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>

<button type="button" class="btn btn-light text-decoration-none"><%= link_to "go back to all restaurants", restaurants_path%></button>

<button type="button" class="btn btn-light text-decoration-none"><%= link_to "create review", new_restaurant_review_path(@restaurant)%></button>
